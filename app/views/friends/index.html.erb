<div class="scroll">
  <% @friends.each do |friend| %>
    <%= link_to friend_path(friend), class:"text-decoration-none" do %>
      <%= image_tag "users/#{friend.picture}", class:"avatar m-1 border border-white border-2" %>
    <% end %>
  <% end %>
</div>

<div class="friends-card d-flex flex-column justify-content-end" style="background-image: url('<%= image_path("users/#{@friends.first.picture}") %>');">
  <div class="d-flex align-items-center justify-content-center">
    <div class="friends-name"><%= @friends.first.first_name %></div>
    <div class="friends-age">54</div>
  </div>
  <div class="mb-5 d-flex flex-colum justify-content-evenly">
    <button class="friends-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
      <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
      </svg>
    </button>
    <button class="friends-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-down-right" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M8.636 12.5a.5.5 0 0 1-.5.5H1.5A1.5 1.5 0 0 1 0 11.5v-10A1.5 1.5 0 0 1 1.5 0h10A1.5 1.5 0 0 1 13 1.5v6.636a.5.5 0 0 1-1 0V1.5a.5.5 0 0 0-.5-.5h-10a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h6.636a.5.5 0 0 1 .5.5"/>
