<% @accointances.each do |accointance| %>
  <%= accointance.follower.email %>

  <% if accointance.status == "pending" %>
    <%= button_to 'Accepter', approve_accointances_request_path(id: accointance.id) %>
    <%= button_to 'Rejeter', deny_accointances_request_path(id: accointance.id) %>
  <% end %>

<% end %>
