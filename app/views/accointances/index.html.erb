<p>HELLO FROM Accointance list</p>

<% @users.each do |user| %>
  <div class="card-accointance"><%= render "card_accointance" %>
    <%= image_tag "users/#{user.picture}" %>
    <h2><%= user.id %></h2>
    <p><%= user.last_name %></p>
    <div>
      <% if current_user.friends(status: 'accepted').include?(user) %>
        Friend
      <% elsif current_user.friends(status: 'pending').include?(user) %>
        Pending
      <% elsif  current_user.friends(status: 'refused').include?(user) %>
        Refused
      <% else %>
        <%= button_to 'ADD A NEW FRIENDS', user_accointances_path(user) %>
      <% end %>
    </div>
  </div>
<% end %>
