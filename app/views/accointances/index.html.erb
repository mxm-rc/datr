<div class="container">

<!-- la barre de recherche -->
  <div class="row justify-content-center">
    <div class="">
      <%= form_with url: accointances_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "search-barre",
              placeholder: "Trouve ton date"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

<!--Mon titre-->
  <div class="row m-4 title">Ajoute ton futur date !</div>

<!--la liste des users ordonnÃ©es par type de status d'accoitnance-->
  <% @users.each do |user| %>
    <% accointance = current_user.accointance_with(user) %>
    <% if accointance %>
      <%= render partial: "status_exist", locals: { user: user, accointance: accointance } %>
    <% else %>
      <%= render partial: "add_button", locals: { user: user } %>
    <% end %>
  <% end %>

</div>
